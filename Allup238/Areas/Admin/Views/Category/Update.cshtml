@model Category
<div class="container-fluid">
    <h1>Update</h1>
    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Name</label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div>
            <img style="width:200px" src="~/uploads/categorys/@Model.CategoryImage" />
        </div>
        <div class="mb-3">
            <label for="categoryImage" class="form-label">ImageFiles</label>
            <input asp-for="CategoryImageFile" class="form-control">
            <span asp-validation-for="CategoryImageFile" class="text-danger"></span>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>
